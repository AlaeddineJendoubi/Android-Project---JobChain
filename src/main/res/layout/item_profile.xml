<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp">

    <android.support.v7.widget.CardView

        cardCornerRadius="5dp"
        cardElevation="1dp"
        cardMaxElevation="1dp"
        cardPreventCornerOverlap="false"
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true">




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:id="@+id/lstRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="63dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Je cherche un "
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/specprofil"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Spec"
                        android:textSize="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="dans la region de "
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/regionprofil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="heading"
                        android:textSize="20dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Recommandation  :"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/nbprofil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SNb"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Description "
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/descprofil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itmSpecEt"
                        android:text="Description"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/lastprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="159dp"
                android:layout_marginLeft="159dp"
                android:layout_marginTop="14dp"
                android:text="User Name" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageViewprofil"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <TextView
                android:id="@+id/firstprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="82dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="14dp"
                android:text="User Name : " />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>