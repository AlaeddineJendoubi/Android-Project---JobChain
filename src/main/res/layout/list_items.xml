<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"

    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewClick"
        cardCornerRadius="5dp"
        cardElevation="1dp"
        cardMaxElevation="1dp"
        cardPreventCornerOverlap="false"
        cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/cardview_dark_background"
        card_view:cardCornerRadius="30dp">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/lstRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_marginTop="63dp"

                android:background="@drawable/whitch">

                <esprit.tn.customfonts.MyTextView_Poppins_Regular
                    android:id="@+id/itmSpecEt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="heading"
                    android:textSize="20dp" />

                <esprit.tn.customfonts.MyTextView_Poppins_Regular
                    android:id="@+id/itmRegEt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itmSpecEt"
                    android:layout_centerHorizontal="true"
                    android:text="Description"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/favid"
                    android:layout_width="53dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/itmRegEt"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/favroug">

                </ImageView>


            </RelativeLayout>

            <TextView
                android:id="@+id/idSeek"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="" />

            <TextView
                android:id="@+id/kiki"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="" />
            <TextView
                android:id="@+id/iduser"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="" />

            <ImageView
                android:id="@+id/delSeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/userNameTv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/x" />

            <esprit.tn.customfonts.MyTextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="214dp"
                android:layout_marginLeft="214dp"
                android:layout_marginTop="19dp"
                android:text="User Name: "
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <esprit.tn.customfonts.MyTextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="98dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="19dp"
                android:text="PostÃ© par : "
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>