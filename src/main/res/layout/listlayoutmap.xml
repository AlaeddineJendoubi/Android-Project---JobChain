<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        android:background="@color/cardview_shadow_end_color">
        <TextView
            android:id="@+id/lat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="qsddddddddddddddddddddddddddd"/>
        <TextView
            android:id="@+id/lag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="qsdqsdsqdqsdqsd"/>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_end_color">
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/nomBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom:"/>
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/nomAfter"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/nomBefore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom:"/>
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/numBefore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero : "
                android:layout_below="@id/nomBefore"
                />
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/numAfter"
                android:layout_toRightOf="@+id/numBefore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero : "
                android:layout_below="@id/nomBefore"
                />
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/desBefore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numBefore"
                android:text="Details :"/>
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/desAfter"
                android:layout_toRightOf="@+id/desBefore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numBefore"
                android:text="Details :"/>
            <esprit.tn.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desBefore"
                android:layout_centerHorizontal="true"
                android:text="voir la localisation dans map"/>

            <Button
                android:id="@+id/goTomap"
                android:layout_marginTop="10dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/m"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mapt"/>


            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>